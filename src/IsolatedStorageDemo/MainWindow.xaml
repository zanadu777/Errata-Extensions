<Window x:Class="IsolatedStorageDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="182,7,0,0" TextWrapping="Wrap" Text="test.txt" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSource" HorizontalAlignment="Left" Height="168" Margin="27,86,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="183" AcceptsReturn="True"/>
        <TextBox x:Name="txtFileText" HorizontalAlignment="Left" Height="194" Margin="317,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="164" AcceptsReturn="True"/>
        <Button x:Name="btWriteAllText" Content="Write All Text" HorizontalAlignment="Left" Margin="27,49,0,0" VerticalAlignment="Top" Width="75" Click="btWriteAllText_Click"/>
        <Button x:Name="btOpenFolder" Content="Open Folder" HorizontalAlignment="Left" Margin="317,10,0,0" VerticalAlignment="Top" Width="94" Click="btOpenFolder_Click"/>
        <Button x:Name="btReadAll" Content="ReadAllText" HorizontalAlignment="Left" Margin="317,44,0,0" VerticalAlignment="Top" Width="75" Click="btReadAll_Click"/>

    </Grid>
</Window>
